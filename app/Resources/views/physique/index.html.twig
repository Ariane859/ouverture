    {% block sidebar %}
    <div class="sidebar">
        <div class="form-row">
            <div class="col-md-2">
                <a href="{{path('path_home')}}" class="accueil">Accueil</a>
            </div>
            <div class="col-md-8">
                <form class="form-inline my-2 my-lg-0" id="formulaire">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="search">
