{% extends 'base.html.twig' %}

{% block content %}

    <style>
            body
                {
                    font-family: Georgia, 'Times New Roman', Times, serif;
                }
            .sidebar
                {
                    background-color: teal;
                    width: 100%;
                    top: 0;
                    left: 0;
                    padding:1%;
                    position:relative;
                }
            a
                {
                    color: white;
                    text-decoration: none;
                }
            a:hover
            {
                color:white;
                text-decoration:none;
            }
            .accueil
            {
                color:white;
                font-size:1.7rem;
            }
            .formulaire 
            {
                color: black;
                margin-top:1%;
                margin-left:11%;
                width:80%;
                border:solid white 1px;
            }
            #ouvrir
            {
                margin-left:80%;
                font-size:1.2rem;
            }
            #index
            {
                color: white;
                margin-top:2%;
                margin-left:94%;
            }
            {# #physiquebundle_physique_tuteur
            {
                cursor: no-drop;
            }
